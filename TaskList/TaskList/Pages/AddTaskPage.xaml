<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskList.Pages.AddTaskPage"
             Title="{Binding Task.Name}">
    <ContentPage.Content>
        <StackLayout Margin="20" VerticalOptions="StartAndExpand">
            <Label Text="Name" />
            <Entry Text="{Binding Task.Name}" />
            <Label Text="Notes" />
            <Entry Text="{Binding Task.Notes}" />
            <Label Text="Done" />
            <Switch IsToggled="{Binding Task.Done}" />
            <Button Text="Save" BackgroundColor="Blue" Command="{Binding SaveCommand}"/>
            <Button Text="Delete" Background="red" Command="{Binding DeleteCommand}" />
            <Button Text="Cancel" Background="red"  Clicked="OnCancelClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>